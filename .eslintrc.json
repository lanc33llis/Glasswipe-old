{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["google"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    "linebreak-style": "off",
    "semi": "off",
    "no-var": "off",
    "quotes": ["error", "double"],
    "eol-last": "error",
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always", { "arraysInObjects": false }],
    "comma-dangle": [
      "error",
      {
        "functions": "never",
        "objects": "only-multiline",
        "arrays": "only-multiline"
      }
    ],
    "space-before-function-paren": [
      "error",
      { "anonymous": "always", "named": "never" }
    ],
    "require-jsdoc": "warn",
    "new-cap": "off",
    "max-len": "off"
  }
}